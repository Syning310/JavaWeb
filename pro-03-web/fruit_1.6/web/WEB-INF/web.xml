<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
        <servlet>
            <servlet-name>fruit1.6</servlet-name>
            <servlet-class>com.servlets.IndexServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>fruit1.6</servlet-name>
            <url-pattern>/app</url-pattern>
        </servlet-mapping>
    
    <context-param>
        <param-name>view-prefix</param-name>
        <param-value>/</param-value>
    </context-param>
    
    <context-param>
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>
    
    
    <servlet>
        <servlet-name>editServlet</servlet-name>
        <servlet-class>com.servlets.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editServlet</servlet-name>
        <url-pattern>/edit.do</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet>
        <servlet-name>update01</servlet-name>
        <servlet-class>com.servlets.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update01</servlet-name>
        <url-pattern>/update.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete01</servlet-name>
        <servlet-class>com.servlets.DelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete01</servlet-name>
        <url-pattern>/del.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add01</servlet-name>
        <servlet-class>com.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add01</servlet-name>
        <url-pattern>/add.do</url-pattern>
    </servlet-mapping>


    
</web-app>